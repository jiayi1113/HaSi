<div class="max-w-md mx-auto mt-5">
  <div class="bg-white shadow-md border border-gray-200 rounded-lg max-w-full p-4 sm:p-6 lg:p-8">
    <h2 class="text-xl font-medium text-gray-900">會員登入</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"text-sm font-medium text-gray-900 mb-2"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5"%>
      </div>

      <div class="field">
        <%= f.label :password, class:"text-sm font-medium text-gray-900 mb-2"%><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "登入", class:"w-full my-7 text-white bg-blue-500 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center cursor-pointer" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
